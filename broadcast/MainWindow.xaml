<Window x:Class="broadcast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:broadcast"
        xmlns:vm="clr-namespace:broadcast.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:SendViewModel}"
    Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Width="80" Command="{Binding StartBroadCastCommand}">开始</Button>
        <Button Width="80">停止</Button>
    </StackPanel>
</Window>
